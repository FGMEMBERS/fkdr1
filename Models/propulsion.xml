<?xml version="1.0"?>

<PropertyList>

 <path>propulsion.ac</path>

 <animation>
  <type>spin</type>
  <object-name>propeller</object-name>
  <object-name>engine</object-name>
  <property>engines/engine[0]/rpm</property>
  <factor>-1.0</factor>
  <center>
   <x-m>-0.88</x-m>
   <y-m>0.0</y-m>
   <z-m>-0.40</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>
 <animation>
  <type>spin</type>
  <object-name>propeller_disk</object-name>
  <object-name>engine_disk</object-name>
  <property>engines/engine[0]/rpm</property>
  <factor>-0.08</factor>
  <center>
   <x-m>-0.88</x-m>
   <y-m>0.0</y-m>
   <z-m>-0.40</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <!-- propeller and engine disks -->
 <animation>
  <type>select</type>
  <object-name>propeller</object-name>
  <object-name>cylinders</object-name>
  <condition>
   <less-than>
    <property>engines/engine/rpm</property>
    <value>400</value>
   </less-than>
  </condition>
 </animation>
 <animation>
  <type>select</type>
  <object-name>propeller_disk</object-name>
  <object-name>engine_disk</object-name>
  <condition>
   <greater-than>
    <property>engines/engine/rpm</property>
    <value>300</value>
   </greater-than>
  </condition>
 </animation>

 <effect>
  <inherits-from>Aircraft/fkdr1/Models/Effects/bumpspec-cylinders</inherits-from>
  <object-name>cylinders</object-name>
 </effect>

</PropertyList>
