<?xml version="1.0"?>

<PropertyList>

	<!--CHOCKS -->
	<animation>
		<type>select</type>
		<object-name>chocks</object-name>
		<condition>
			<and>
				<property>controls/gear/brake-parking</property>
				<property>gear/gear[0]/wow</property>
				<property>gear/gear[1]/wow</property>
			</and>
		</condition>
	</animation>
 
	<!-- MAIN LEFT CHOCKS -->
	<model>
		<name>chocks</name>
		<path>Aircraft/fkdr1/Models/chock.ac</path>
		<offsets> 
			<x-m>-0.45</x-m>
			<y-m>-0.75</y-m>
			<z-m>-1.99</z-m>
			<heading-deg>90</heading-deg>
		</offsets>
	</model>
 
	<model>
		<name>chocks</name>
